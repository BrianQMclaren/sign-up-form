<% include partials/head %>

<form action="/register" method="POST">

  <fieldset>
    <legend>Get started with a free account</legend>

    <label for="name">Name</label>
    <input type="name" id="name" placeholder="name" name="full_name">

    <label for="email">Email</label>
    <input type="email" id="email" placeholder="email" name="user_email">

    <label for="name">Username</label>
    <input type="text" id="name" placeholder="username" name="user_name">

    <label for="password">Password</label>
    <input type="password" id="password" placeholder="password" name="user_password">

    <label for="password">Confirm Password</label>
    <input type="password" id="password" placeholder="confirm password" name="confirm_password">

  </fieldset>

  <button type="submit">Sign Up</button>


